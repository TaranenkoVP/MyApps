@model MyForum.Web.MVC.Areas.User.Models.Posts.PostInputModel
@{
    ViewBag.Title = "_AddPostPartial";
}
@using (Ajax.BeginForm("AddPost", "UserPost", new {area = User},
    new AjaxOptions {HttpMethod = "POST", UpdateTargetId = "info", OnComplete = "Scroll" }, new {id = "MyNewNameId"}))
{
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <form class="form-inline" role="form">
        <div class="form-group">
            @Html.Label("Please type the message")
            @Html.EditorFor(m => m.Content, new {htmlAttributes = new {@class = "form-control", rows = "5", width = "100%"}})
            @Html.ValidationMessageFor(m => m.Content)
            @Html.HiddenFor(m => m.TopicId)
        </div>
        <div class="form-group text-center">
            <input type="submit" value="Create Post" class="btn btn-primary text-center"/>
        </div>
    </form>
    <br/>
}

<div id="info">

</div>

