@model MyForum.Web.MVC.Areas.User.Models.Posts.UserEditPostViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Please type the message")
            @Html.EditorFor(m => m.Content, new { htmlAttributes = new { @class = "form-control myCustomTextBox", rows = "5", width = "100%" } })
            @Html.ValidationMessageFor(m => m.Content)
            @Html.HiddenFor(m => m.TopicId)
            @Html.HiddenFor(m => m.Id)
            @*@Html.HiddenFor(m => m.AuthorId)
            @Html.HiddenFor(m => m.CreatedOn)*@
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
